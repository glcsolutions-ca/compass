NODE_ENV=development
API_PORT=3001
API_HOST=0.0.0.0
LOG_LEVEL=info
# Optional. When set, the API reads consolidated views from PostgreSQL.
DATABASE_URL=postgres://compass:compass@localhost:5432/compass
DB_POOL_MAX=10
DB_IDLE_TIMEOUT_MS=10000
DB_CONNECTION_TIMEOUT_MS=2000
DB_SSL_MODE=disable
DB_SSL_REJECT_UNAUTHORIZED=true
# Use development only for local/dev flows. Production must use AUTH_MODE=entra.
AUTH_MODE=development
REQUIRED_SCOPE=time.read
DEV_JWT_SECRET=dev-secret-change-me

# Required only when AUTH_MODE=entra
# ENTRA_ISSUER=https://login.microsoftonline.com/<tenant-id>/v2.0
# ENTRA_AUDIENCE=api://<client-id>
# ENTRA_JWKS_URI=https://login.microsoftonline.com/<tenant-id>/discovery/v2.0/keys
