{
  "name": "@compass/api",
  "version": "0.1.0",
  "description": "Compass API service",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "start": "node dist/index.js",
    "test": "vitest run --config vitest.config.mts",
    "test:integration": "vitest run --config vitest.integration.config.mts",
    "typecheck": "tsc -p tsconfig.ref.json --noEmit"
  },
  "dependencies": {
    "@compass/contracts": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.2.1",
    "node-pg-migrate": "8.0.4",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@compass/testkit": "workspace:*",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.2.2",
    "tsx": "4.21.0",
    "vitest": "3.2.4"
  }
}
