    "pg": "^8.16.3",
    "ws": "^8.18.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@compass/testkit": "workspace:*",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/pg": "^8.15.6",
    "@types/ws": "^8.18.1",
    "tsx": "4.21.0",
    "vitest": "3.2.4"
  }
