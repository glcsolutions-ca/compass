{
  "name": "@compass/worker",
  "version": "0.1.0",
  "description": "Compass background worker",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "start": "node dist/index.js",
    "test": "vitest run --config vitest.config.mts",
    "typecheck": "tsc -p tsconfig.ref.json --noEmit"
  },
  "dependencies": {
    "@azure/identity": "^4.13.0",
    "@azure/service-bus": "^7.9.5",
    "@compass/contracts": "workspace:*",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@compass/testkit": "workspace:*",
    "tsx": "4.21.0",
    "vitest": "3.2.4"
  }
}
