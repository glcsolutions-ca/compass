{
  "name": "compass-platform",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22 <23"
  },
  "packageManager": "pnpm@10.30.1",
  "scripts": {
    "build": "turbo run build",
    "check": "pnpm check:format && pnpm check:lint && pnpm check:typecheck && pnpm check:test && pnpm check:contract",
    "check:quick": "pnpm check:format && pnpm check:lint && pnpm check:typecheck && pnpm test:merge-contract",
    "check:format": "pnpm format:check",
    "check:lint": "pnpm lint",
    "check:typecheck": "pnpm typecheck:refs && pnpm typecheck",
    "check:test": "pnpm test",
    "check:contract": "pnpm contract:check",
    "clean": "rimraf --glob .turbo coverage \"*.tsbuildinfo\" \"apps/*/dist\" \"apps/*/dist-types\" \"apps/*/.next\" \"apps/*/.turbo\" \"apps/*/coverage\" \"apps/*/*.tsbuildinfo\" \"packages/*/dist\" \"packages/*/dist-types\" \"packages/*/.next\" \"packages/*/.turbo\" \"packages/*/coverage\" \"packages/*/*.tsbuildinfo\"",
    "dev": "turbo run dev --parallel",
    "db:migrate:create": "node db/scripts/migrate.mjs create",
    "db:migrate:up": "node db/scripts/migrate.mjs up",
    "db:migrate:down": "node db/scripts/migrate.mjs down",
    "db:migrate:status": "node db/scripts/migrate-status.mjs",
    "db:seed": "node db/scripts/seed-postgres.mjs",
    "db:postgres:wait": "node db/scripts/wait-for-postgres.mjs",
    "db:postgres:up": "docker compose -f db/postgres/docker-compose.yml up -d postgres && pnpm db:postgres:wait && pnpm db:migrate:up && pnpm db:seed",
    "db:postgres:down": "docker compose -f db/postgres/docker-compose.yml down",
    "db:postgres:reset": "docker compose -f db/postgres/docker-compose.yml down --volumes && pnpm db:postgres:up",
    "db:postgres:logs": "docker compose -f db/postgres/docker-compose.yml logs -f postgres",
    "deploy:migrate:start": "node scripts/deploy/start-migration-job.mjs",
    "deploy:migrate:wait": "node scripts/deploy/wait-migration-job.mjs",
    "deploy:custom-domain:dns": "node scripts/deploy/custom-domain-dns.mjs",
    "deploy:smoke": "node scripts/deploy/verify-api-smoke.mjs",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "generate": "turbo run generate",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "typecheck:refs": "tsc -b --pretty false",
    "contract:generate": "pnpm generate",
    "contract:check": "pnpm contract:generate && git diff --exit-code -- packages/contracts/openapi/openapi.json packages/sdk/src/generated/schema.ts",
    "ci:preflight": "node scripts/ci/preflight.mjs",
    "ci:docs-drift": "node scripts/ci/docs-drift.mjs",
    "ci:pipeline": "pnpm check && pnpm build",
    "ci:browser-evidence": "playwright test tests/e2e/smoke.spec.ts --config tests/e2e/playwright.config.ts --reporter=line --workers=1",
    "ci:harness-smoke": "tsx tests/system/smoke.ts",
    "ci:gate": "node scripts/ci/gate.mjs",
    "test:merge-contract": "vitest run scripts/ci/utils.test.mjs scripts/ci/preflight-lib.test.mjs scripts/ci/gate-lib.test.mjs",
    "hooks:install": "git config core.hooksPath .githooks"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "10.0.1",
    "@next/eslint-plugin-next": "15.5.12",
    "@playwright/test": "1.58.2",
    "@types/node": "24.10.13",
    "eslint": "10.0.1",
    "eslint-config-prettier": "10.1.8",
    "lint-staged": "16.2.7",
    "node-pg-migrate": "8.0.4",
    "pg": "^8.16.3",
    "playwright": "1.58.2",
    "prettier": "3.8.1",
    "rimraf": "6.1.3",
    "tsx": "4.21.0",
    "turbo": "2.8.10",
    "typescript": "5.9.3",
    "typescript-eslint": "8.56.0",
    "vite-tsconfig-paths": "6.1.1",
    "vitest": "3.2.4"
  }
}
