{
  "name": "compass-platform",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22 <23"
  },
  "packageManager": "pnpm@10.30.1",
  "scripts": {
    "prepare": "pnpm git-hooks:install",
    "build": "turbo run build",
    "clean": "rimraf --glob .turbo coverage \"*.tsbuildinfo\" \"apps/*/dist\" \"apps/*/dist-types\" \"apps/*/.next\" \"apps/*/.turbo\" \"apps/*/coverage\" \"apps/*/*.tsbuildinfo\" \"packages/*/dist\" \"packages/*/dist-types\" \"packages/*/.next\" \"packages/*/.turbo\" \"packages/*/coverage\" \"packages/*/*.tsbuildinfo\"",
    "dev": "node scripts/dev/ensure-local-env.mjs && turbo run dev --parallel --filter=@compass/api --filter=@compass/web --filter=@compass/codex-app-server",
    "dev:all": "node scripts/dev/ensure-local-env.mjs && turbo run dev --parallel",
    "dev:worker": "pnpm --filter @compass/worker dev",
    "db:migrate:create": "node db/scripts/migrate-create.mjs",
    "db:migrate:check": "node db/scripts/check-migration-policy.mjs",
    "db:migrate:checksums:update": "node db/scripts/check-migration-policy.mjs --write",
    "db:migrate:up": "pnpm db:migrate:check && node db/scripts/migrate.mjs up",
    "db:migrate:down": "pnpm db:migrate:check && node db/scripts/migrate.mjs down",
    "db:migrate:status": "node db/scripts/migrate-status.mjs",
    "db:seed": "node db/scripts/seed-postgres.mjs",
    "db:postgres:wait": "node db/scripts/wait-for-postgres.mjs",
    "db:postgres:up": "node scripts/dev/ensure-local-env.mjs && docker compose --env-file db/postgres/.env -f db/postgres/docker-compose.yml up -d postgres && pnpm db:postgres:wait && pnpm db:migrate:up && pnpm db:seed",
    "db:postgres:down": "node scripts/dev/ensure-local-env.mjs && docker compose --env-file db/postgres/.env -f db/postgres/docker-compose.yml down",
    "db:postgres:reset": "node scripts/dev/ensure-local-env.mjs && docker compose --env-file db/postgres/.env -f db/postgres/docker-compose.yml down --volumes && pnpm db:postgres:up",
    "db:postgres:logs": "node scripts/dev/ensure-local-env.mjs && docker compose --env-file db/postgres/.env -f db/postgres/docker-compose.yml logs -f postgres",
    "deploy:migrate:start": "node scripts/pipeline/cloud/deployment-stage/start-migration-job.mjs",
    "deploy:migrate:wait": "node scripts/pipeline/cloud/deployment-stage/wait-migration-job.mjs",
    "deploy:custom-domain:dns": "node scripts/pipeline/cloud/deployment-stage/custom-domain-dns.mjs",
    "deploy:smoke": "node scripts/pipeline/cloud/deployment-stage/verify-api-smoke.mjs",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "generate": "turbo run generate",
    "lint": "turbo run lint",
    "test": "pnpm test:static && pnpm test:unit && pnpm contract:check",
    "test:static": "pnpm ci:high-risk-mainline-policy && pnpm ci:testing-policy && pnpm ci:terminology-policy && pnpm ci:service-bus-auth-contract && pnpm db:migrate:check && pnpm format:check && pnpm lint && pnpm typecheck:refs && pnpm typecheck",
    "test:unit": "turbo run test && pnpm test:pipeline-contract",
    "test:contracts": "pnpm --filter @compass/contracts test && pnpm --filter @compass/sdk test && pnpm contract:check",
    "test:runtime:unit": "pnpm --filter @compass/api test && pnpm --filter @compass/web test && pnpm --filter @compass/worker test && pnpm --filter @compass/contracts test && pnpm --filter @compass/sdk test",
    "test:runtime:integration": "pnpm --filter @compass/api test:integration",
    "test:runtime:smoke": "pnpm ci:smoke:system && pnpm test:acceptance:system && pnpm test:e2e",
    "test:coverage": "pnpm --filter @compass/api exec vitest run --config vitest.config.mts --coverage && pnpm --filter @compass/web exec vitest run --config vitest.config.mts --coverage && pnpm --filter @compass/worker exec vitest run --config vitest.config.mts --coverage && pnpm --filter @compass/contracts exec vitest run --config vitest.config.mts --coverage && pnpm --filter @compass/sdk exec vitest run --config vitest.config.mts --coverage",
    "test:integration": "pnpm --filter @compass/api test:integration && pnpm --filter @compass/codex-app-server test:integration",
    "test:e2e": "playwright test tests/e2e/smoke.spec.ts --config tests/e2e/playwright.config.ts --reporter=line --workers=1",
    "test:full": "pnpm test && pnpm test:integration",
    "test:acceptance:browser": "playwright test tests/e2e/smoke.spec.ts --config tests/e2e/playwright.config.ts --reporter=line --workers=1",
    "test:acceptance:system": "tsx tests/system/smoke.ts",
    "test:acceptance:codex": "tsx tests/system/codex-smoke.ts",
    "test:acceptance:auth-entra-canary": "node scripts/pipeline/cloud/automated-acceptance-test-gate/run-auth-entra-canary.mjs",
    "typecheck": "turbo run typecheck",
    "typecheck:refs": "tsc -b --pretty false",
    "contract:generate": "pnpm generate",
    "contract:check": "pnpm contract:generate && git diff --exit-code -- packages/contracts/openapi/openapi.json packages/sdk/src/generated/schema.ts",
    "git-hooks:install": "git rev-parse --is-inside-work-tree >/dev/null 2>&1 || exit 0; if git config --worktree core.hooksPath .githooks 2>/dev/null; then git config --local --unset-all core.hooksPath >/dev/null 2>&1 || true; else git config core.hooksPath .githooks; fi",
    "git-hooks:pre-commit": "pnpm test:static",
    "git-hooks:pre-push": "pnpm test:static",
    "ci:scope": "node scripts/pipeline/commit/resolve-scope.mjs",
    "ci:docs-drift": "node scripts/pipeline/commit/check-docs-drift.mjs",
    "ci:high-risk-mainline-policy": "node scripts/pipeline/commit/check-high-risk-mainline-policy.mjs",
    "ci:testing-policy": "node scripts/pipeline/commit/check-testing-policy.mjs",
    "ci:terminology-policy": "node scripts/pipeline/commit/check-terminology-policy.mjs",
    "ci:service-bus-auth-contract": "node scripts/pipeline/commit/check-service-bus-auth-contract.mjs",
    "ci:smoke:system": "tsx tests/commit/smoke.inproc.ts",
    "ci:runtime-coverage": "pnpm test:coverage && node scripts/pipeline/commit/check-runtime-coverage.mjs",
    "ci:gate:commit-stage": "node scripts/pipeline/commit/decide-commit-stage.mjs",
    "ci:commit-test-suite": "pnpm test && pnpm ci:smoke:system",
    "codex:pin:sync": "node scripts/codex/sync-openai-codex-release.mjs",
    "codex:pin:install": "node scripts/codex/install-pinned-openai-codex.mjs",
    "desktop:dev": "pnpm --filter @compass/desktop dev:run",
    "desktop:make:mac": "pnpm --filter @compass/desktop make:mac",
    "desktop:make:win": "pnpm --filter @compass/desktop make:win",
    "test:pipeline-contract": "vitest run db/scripts/migration-policy-lib.test.mjs db/scripts/constants.test.mjs scripts/dev/ensure-local-env.test.mjs scripts/pipeline/shared/pipeline-utils.test.mjs scripts/pipeline/shared/decide-release-outcome-lib.test.mjs scripts/pipeline/commit/resolve-scope-lib.test.mjs scripts/pipeline/commit/decide-commit-stage-lib.test.mjs scripts/pipeline/commit/decide-integration-gate-lib.test.mjs scripts/pipeline/commit/auto-recover-main.test.mjs scripts/pipeline/commit/testing-policy.test.mjs scripts/pipeline/commit/check-testing-policy.test.mjs scripts/pipeline/commit/check-high-risk-mainline-policy.test.mjs scripts/pipeline/commit/check-auth-openapi-metadata.test.mjs scripts/pipeline/commit/runtime-coverage-lib.test.mjs scripts/pipeline/commit/eslint-policy.test.mjs scripts/pipeline/shared/workflow-pipeline-contract.test.mjs scripts/pipeline/cloud/automated-acceptance-test-gate/decide-automated-acceptance-test-gate-lib.test.mjs scripts/pipeline/cloud/automated-acceptance-test-gate/acceptance-blackbox-contract.test.mjs scripts/pipeline/cloud/deployment-stage/apply-infra.test.mjs scripts/pipeline/cloud/deployment-stage/entra-config-wiring.test.mjs"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "10.0.1",
    "@playwright/test": "1.58.2",
    "@types/node": "24.10.13",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "10.0.1",
    "eslint-config-prettier": "10.1.8",
    "lint-staged": "16.2.7",
    "node-pg-migrate": "8.0.4",
    "pg": "^8.16.3",
    "playwright": "1.58.2",
    "prettier": "3.8.1",
    "rimraf": "6.1.3",
    "tsx": "4.21.0",
    "turbo": "2.8.10",
    "typescript": "5.9.3",
    "typescript-eslint": "8.56.0",
    "vite-tsconfig-paths": "6.1.1",
    "vitest": "3.2.4",
    "jsdom": "^27.2.0"
  }
}
